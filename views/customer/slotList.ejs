<script>

    const bookSlot = async () => {
        let formData = document.getElementById("slotBooking");
        let slotInfo = new FormData(formData);
        let params = new URLSearchParams(slotInfo);

        let data = await fetch("/customer/bookSlot", {
            method:"POST",
            headers:{
                "Content-Type":"application/x-www-form-urlencoded"},
            body:params,
        })

        if(data.status === 200){
            localStorage.clear();
            location.href = "/customer/home";
        }

        // toast.show(data.success ? "success" : "error", data.message);

    }

</script>
