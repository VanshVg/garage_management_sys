<div class="h-full w-full flex shadow-md relative rounded-md border">
    <div class="absolute top-0 right-0 flex items-center mr-4 mt-4">
        <button type="button" class="bg-dark focus:outline-none rounded-full h-full w-full">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                style="fill: rgba(255, 255, 255, 1);" onclick="activeSub('profile-edit')">
                <path
                    d="M4 21a1 1 0 0 0 .24 0l4-1a1 1 0 0 0 .47-.26L21 7.41a2 2 0 0 0 0-2.82L19.42 3a2 2 0 0 0-2.83 0L4.3 15.29a1.06 1.06 0 0 0-.27.47l-1 4A1 1 0 0 0 3.76 21 1 1 0 0 0 4 21zM18 4.41 19.59 6 18 7.59 16.42 6zM5.91 16.51 15 7.41 16.59 9l-9.1 9.1-2.11.52z">
                </path>
            </svg>
        </button>
    </div>
    <div class="w-1/3 border-r border-gray-300 p-6 pt-5">
        <div class="relative rounded overflow-hidden">
            <img alt="Profile Picture" class="w-full h-auto mb-4 object-cover" dataBound="profile_pic"
                style="height: 420px;">
            <div
                class="absolute bottom-0 flex flex-col justify-end  items-center w-full bg-gradient-to-t from-black backdrop-filter h-full p-5">
                <h2 class="text-xl font-bold text-white" id="name" dataBound="name"></h2>
                <p class="text-gray-600">(owner)</p>
            </div>
        </div>
        <div class="mt-4 text-left">
            <h3 class="text-lg font-semibold mb-1 ml-2 border-b-2 border-blue pb-1 inline-block">Contact Details</h3>
            <div class="flex items-center">
                <div class="bg-dark h-[30px] min-w-[30px] flex justify-center items-center m-2 rounded-full">
                    <img src="/icons/mail.svg" alt="Mail Icon" class="h-5 w-5">
                </div>
                <a href="#" class="text-[15px]" id="email" dataBound="email"></a>
            </div>
            <div class="flex">
                <div class="flex items-center">
                    <div class="bg-dark h-[30px] min-w-[30px] flex justify-center items-center m-2 rounded-full">
                        <img src="/icons/location.svg" alt="Mail Icon" class="h-5 w-5">
                    </div>
                    <address class="text-xs not-italic" id="address" dataBound="address"></address>
                </div>
            </div>

        </div>
    </div>
    <div class="w-2/3 pl-6 text-left p-6">
        <h3 class="text-lg font-semibold mb-1  border-b-2 border-blue pb-1 inline-block">Bio</h3>
        <p class="word-wrap flex-wrap text-base text-justify mt-2" id="bio" dataBound="bio"></p>
    </div>
</div>