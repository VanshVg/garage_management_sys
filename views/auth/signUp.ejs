<%- include('../partials/head.ejs') %>
  <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <link rel="stylesheet" href="/styles/auth.css">
  </head>

  <body>
    <div class="section">
      <div class="container">
        <div class="logo">
          <img src="logo.png" alt="logo page">
        </div>
        <p class="projectTitle">Garage Management System</p>
        <div class="imgContainer">
          <img src="Group 35.png" alt="car image">
          <img src="Group 15.png" alt="owner image">
        </div>
        <form action="/register" method="post">
          <div class="formContainer">
            <div class="pageInputs">
              <div class="pageIcons">
                <box-icon class="icons" color="white" name='user'></box-icon>
              </div>

              <input type="text" name="name" id="name" placeholder="your name" tabindex="1">

            </div>
            <div class="formContainer">
              <div class="pageInputs">
                <div class="pageIcons">
                  <box-icon class="icons" color="white" name='mail-send'></box-icon>
                </div>

                <input type="text" name="email" id="email" placeholder="abc@pqr.xyz" tabindex="2">

              </div>
              <div class="pageInputs">
                <div class="pageIcons">
                  <box-icon class="icons" color="white" name='lock-open-alt'></box-icon>
                </div>

                <input type="password" name="password" id="password" placeholder="* * * * * * * *" tabindex="3">

              </div>

              <div class="pageInputs">
                <div class="pageIcons">
                  <box-icon class="icons" color="white" name='lock-open-alt'></box-icon>
                </div>

                <input type="password" name="conformPassword" id="conformPassword" placeholder="* * * * * * * *"
                  tabindex="4">

              </div>

              <input type="button" class="registerButton" id="registerButton" value="REGISTER" tabindex="5">
              <div class="createAccount">
                already have account ? <a id="registerLogin" href="/signin" tabindex="6">login</a>
              </div>
        </form>
      </div>
    </div>
    <%- include('../partials/foot.ejs') %>