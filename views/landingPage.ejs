<%- include('./partials/head') %>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles/landingPage.css">
  <%- include('./partials/navbar'); %>
    <div class="section" id="landing-section">
      <div class="container text-center type-writer py-[20%]">
        <h1 class="text-white text-3xl font-bold">Garage Management System</h1>
        <p class="text-teal-300">Welcome to the ultimate and iconic world and explore our garage management
          system
        </p>
      </div>
    </div>
    <div class="section mt-8" id="section2">
      <div class="show-data">
        <div class="card">
          <img src="/icons/car.svg" alt="car" class="w-10">
          <h1 class="text-white font-bold">Oil Change</h1>
        </div>
        <div class="card">
          <img src="/icons/service.svg" alt="car" class="w-10">
          <h1 class="text-white font-bold">Engine Repairing</h1>
        </div>
        <div class="card">
          <img src="/icons/car.svg" alt="car" class="w-10">
          <h1 class="text-white font-bold">General Service</h1>
        </div>
        <div class="card">
          <img src="/icons/car.svg" alt="car" class="w-10">
          <h1 class="text-white font-bold">Battery Repair</h1>
        </div>
      </div>
    </div>
    <div class="section" id="section3">
      <div class="show-data">
        <div class="card">
          <div id="garageCount">100 +</div>
          Garage's Registered
        </div>
        <div class="card">
          <div id="customerCount">1000 +</div>
          Happy Customers
        </div>
        <div class="card">
          <div id="yearsCount">5+</div>
          Years of experience
        </div>
        <div class="card">
          <div id="serviceCount">100+</div>
          Services Available
        </div>
      </div>
    </div>

    <footer class="bg-dark text-white px-4 text-left">
